<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_160sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignBottom="@+id/receiveImg"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_7sdp"
        app:civ_border_color="@color/green"
        app:civ_border_width="1dp" />

    <ImageView
        android:id="@+id/receiveImg"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_140sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_toRightOf="@id/profile_image"
        android:background="@color/black" />
    <TextView
        android:id="@+id/btnPlay"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/video_48px"
        android:layout_margin="@dimen/_50sdp"
        android:layout_alignTop="@id/receiveImg"
        android:layout_alignBottom="@id/receiveImg"
        android:layout_alignLeft="@id/receiveImg"
        android:layout_alignRight="@id/receiveImg"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toRightOf="@+id/receiveImg"
        android:fontFamily="sans-serif-thin"
        android:text="adsdasd"
        android:textColor="@color/black"
        android:textSize="@dimen/_7sdp"
        android:visibility="gone"/>

</RelativeLayout>