<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_160sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignBottom="@+id/sendImg"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_7sdp"
        app:civ_border_color="@color/green"
        app:civ_border_width="@dimen/_1sdp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/sendImg"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_centerVertical="true"
        android:background="@color/black"
        android:layout_toLeftOf="@id/profile_image">
    </ImageView>
    <TextView
        android:id="@+id/btnPlay"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/video_48px"
        android:layout_margin="@dimen/_50sdp"
        android:layout_alignTop="@id/sendImg"
        android:layout_alignBottom="@id/sendImg"
        android:layout_alignLeft="@id/sendImg"
        android:layout_alignRight="@id/sendImg"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-thin"
        android:textSize="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/sendImg"
        android:visibility="gone"/>

</RelativeLayout>